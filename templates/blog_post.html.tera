{% extends "base" %}
{% block page_name %}Blog Post{% endblock %}
{% block page_description %}Lilith's Post{% endblock %}
{% block body %}
<h1>{{post.name}}</h1>
<small>Last Updated: {{post.modified}}</small>
<small>Tags: 
  {% for tag in tags %} 
    {{tag.tag}}{%if not loop.last%},{%endif%}
  {%endfor%}
</small>
<div class="blog">
{{post_content | safe}}
</div>
{% endblock body %}
